
<section id="feed-posts">
    <h4>Posts</h4>

    <% if(locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="POST">   
        <textarea name="content" cols="30" rows="3"></textarea>
        <input type="submit" value="Post">
        
    </form>

    <% } %>


    <div>
    <% for(var post of posts){ %>

        <p><%= post.user.name%></p>
        <p><%= post.content%></p>

        <%}%>
    </div>

</section>