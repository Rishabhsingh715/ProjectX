
<link rel="stylesheet" type="text/css" href="/home.css">

<section id="feed-posts">
    <h1>Post your idea here</h1>

    <% if(locals.user){ %>
    <form  action="/posts/create" id="new-post-form" method="POST">   
        <textarea id="box" class="dodo" name="content" cols="30" rows="3" placeholder="Enter post here"></textarea>
        <input  type="submit" value="Make the post" class="dodo">
        
    </form>

    <% } %>

</section>

<div id="post-container">
    
    <% for(var post of posts){ %>

        <div id="posts">
           <p>Post by <%= post.user.name%></p>
           <p><%= post.content%></p>
      <% if(locals.user && locals.user.id == post.user.id){ %>
           <small>
               <a href="/posts/destroy/<%= post.id%>">Delete-Post</a>
           </small>

           <%}%>

           <div class="post-comments">
               <% if(locals.user){ %>

                <form action="/comments/create" method="post">
                    <input type="text" name="content" placeholder="Type here to add the coment" class="dodo">
                    <input type="hidden" name="post" value="<%= post._id%>">
                    <input type="submit" value="Add Comment" class="dodo">

                </form>

                <%}%>
                <h3>Comments</h3>
                <div class="post-comments-list">

                    <ul id="post-comments-<%= post._id %>">

                        <% for(comment of post.comments){ %>

                            <% if(locals.user && locals.user.id == comment.user.id){ %>
                                <small>
                                    <a href="/comments/destroy/<%= comment.id%>">Delete-Comment</a>
                                </small>
                     
                                <%}%>
                            <p>
                                <%=comment.content%> 
                                <br>
                                <small>
                                    <%= comment.user.name %>
                                </small>
                            </p>
                            <%}%>
                    </ul>

                </div>






           </div>
        </div>

        <%}%>
    
</div>